# Git windows configuration
# vim: set ft=gitconfig:

[init]
  templatedir = ~/AppData/Local/git/templates

[core]
  attributesfile = ~/AppData/Local/git/attributes
  excludesfile = ~/AppData/Local/git/ignore
  attributesfile = ~/AppData/Local/git/attributes

[commit]
  template = ~/AppData/Local/git/message

[credential]
  guiPrompt = false
  helper = store
  modalprompt = false

[safe]
  directory = *
