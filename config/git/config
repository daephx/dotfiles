# vim: set ft=gitconfig

### Core ###

[init]
  defaultBranch = main

[core]
  autocrlf = input
  excludesfile = ~/.config/git/ignore
  attributesfile = ~/.config/git/attributes
  pager = less -S

[commit]
  template = ~/.config/git/message

[credential]
  helper = cache --timeout=600

[pager]
  branch = true
  status = true

[status]
  showUntrackedFiles = all

[push]
  default = matching

[rebase]
  autoStash = true

### Colors ###

[color]
  ui = true

[color "diff"]
  meta = 11
  frag = magenta bold
  commit = cyan bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = yellow bold 52
  newNormal = green bold
  newHighlight = cyan bold 22

### LFS ###

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true


### Difftools ###

[diff]
  tool = nvimdiff

[difftool]
  trustExitCode = true
  prompt = true

[merge]
  tool = nvimdiff
  conflictstyle = diff3

[mergetool]
  trustExitCode = true
  keepBackup = false
  prompt = false

# Neovim

[difftool "nvimdiff"]
  cmd = "nvim -d $MERGED $BASE $LOCAL $REMOTE -c 'wincmd J | wincmd ='"

[mergetool "nvimdiff"]
  cmd = "nvim -d $MERGED $BASE $LOCAL $REMOTE -c 'wincmd J | wincmd ='"

# Visual Studio Code

[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE

[mergetool "vscode"]
  cmd = code --wait $MERGED

# Visual Studio IDE

[difftool "visualstudio"]
  cmd = \"C:\\Program Files (x86)\\Microsoft Visual Studio\\Preview\\Community\\Common7\\IDE\\CommonExtensions\\Microsoft\\TeamFoundation\\Team Explorer\\vsdiffmerge.exe\" \"$LOCAL\" \"$REMOTE\" //t

[mergetool "visualstudio"]
  cmd = \"C:\\Program Files (x86)\\Microsoft Visual Studio\\Preview\\Community\\Common7\\IDE\\CommonExtensions\\Microsoft\\TeamFoundation\\Team Explorer\\vsdiffmerge.exe\" \"$REMOTE\" \"$LOCAL\" \"$BASE\" \"$MERGED\" //m


### Includes ###

[include]
  path = ~/.config/git/aliases
  path = ~/.config/git/config.local
