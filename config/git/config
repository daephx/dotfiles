# vim: set ft=gitconfig

### Core ###

[init]
  defaultBranch = main
  templatedir = ~/.config/git/templates

[core]
  attributesfile = ~/.config/git/attributes
  autocrlf = input
  excludesfile = ~/.config/git/ignore
  pager = less -S

  # Speed up commands involving untracked files such as `git status`.
  # https://git-scm.com/docs/git-update-index#_untracked_cache
  untrackedCache = true

  # Treat spaces before tabs and all kinds of trailing whitespace as an error
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[commit]
  template = ~/.config/git/message

[credential]
  helper = cache --timeout=600

[pager]
  branch = true
  status = true

[log]
  date = relative

[status]
  showUntrackedFiles = all

[fetch]
  prune = true

[pull]
  rebase = false

[push]
  default = current

[fetch]
  prune = true

[rebase]
  autoSquash = true
  autoStash = true


### Colors ###

[color]
  ui = auto

[color "diff"]
  commit = cyan bold
  frag = magenta bold
  meta = yellow bold
  new = green bold
  old = red bold
  whitespace = red reverse

[color "diff-highlight"]
  newHighlight = cyan bold 22
  newNormal = green bold
  oldHighlight = yellow bold 52
  oldNormal = red bold


### LFS ###

[filter "lfs"]
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  required = true
  smudge = git-lfs smudge -- %f


### Difftools ###

[diff]
  tool = nvimdiff

[difftool]
  prompt = true
  trustExitCode = true

[merge]
  conflictstyle = diff3
  tool = nvimdiff

[mergetool]
  keepBackup = false
  prompt = false
  trustExitCode = true

# Neovim

[difftool "nvimdiff"]
  cmd = "nvim -d $MERGED $BASE $LOCAL $REMOTE -c 'wincmd J | wincmd ='"

[mergetool "nvimdiff"]
  cmd = "nvim -d $MERGED $BASE $LOCAL $REMOTE -c 'wincmd J | wincmd ='"

# Visual Studio Code

[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE

[mergetool "vscode"]
  cmd = code --wait $MERGED

# Visual Studio IDE

[difftool "visualstudio"]
  cmd = \"C:\\Program Files (x86)\\Microsoft Visual Studio\\Preview\\Community\\Common7\\IDE\\CommonExtensions\\Microsoft\\TeamFoundation\\Team Explorer\\vsdiffmerge.exe\" \"$LOCAL\" \"$REMOTE\" //t

[mergetool "visualstudio"]
  cmd = \"C:\\Program Files (x86)\\Microsoft Visual Studio\\Preview\\Community\\Common7\\IDE\\CommonExtensions\\Microsoft\\TeamFoundation\\Team Explorer\\vsdiffmerge.exe\" \"$REMOTE\" \"$LOCAL\" \"$BASE\" \"$MERGED\" //m


### Includes ###

[include]
  path = ~/.config/git/aliases
  path = ~/.config/git/config.local
