# Git global/user configuration
# vim: set ft=gitconfig:

### Core ###

[init]
	defaultBranch = main
	# templatedir = ~/.config/git/templates

[core]
	attributesfile = ~/.config/git/attributes
	autocrlf = input
	excludesfile = ~/.config/git/ignore
	pager = delta

	# Speed up commands involving untracked files such as `git status`.
	# https://git-scm.com/docs/git-update-index#_untracked_cache
	untrackedCache = true

	# Treat spaces before tabs and all kinds of trailing whitespace as an error
	whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[commit]
	template = ~/.config/git/message

[credential]
	helper = cache --timeout=600

[pager]
	branch = true
	status = true

[log]
	date = relative

[status]
	showUntrackedFiles = all

[fetch]
	prune = true

[pull]
	rebase = false

[push]
	default = current

[fetch]
	prune = true

[rebase]
	autoSquash = true
	autoStash = true

[branch]
	sort = -committerdate # Show most recently changed branches first.

[stash]
	showPatch = true

[help]
	# If a command is mistyped, make Git automatically
	# run the command it thinks the user wanted to type.
	autocorrect = immediate

[rerere]
	enabled = true

### Delta ###

[delta]
	decorations = true
	features = theme
	line-numbers = true
	navigate = true

[interactive]
	diffFilter = delta --color-only

[delta "decorations"]
	commit-decoration-style = bold yellow box ul

[delta "theme"]
	dark = true
	commit-decoration-style = 8 ol
	file-decoration-style = 8 box ul
	file-style = white bold
	hunk-header-decoration-style = 8 box ul
	hunk-header-style = omit
	line-numbers-left-format = " {nm:>3} │"
	line-numbers-left-style = 234
	line-numbers-right-format = " {np:>3} │"
	line-numbers-right-style = 234
	line-numbers-zero-style = gray
	zero-style = syntax

### Colors ###

[color]
	ui = auto

[color "decorate"]
	HEAD = yellow
	branch = green
	remoteBranch = magenta
	stash = magenta
	tag = yellow bold

[color "diff"]
	commit = cyan bold
	frag = magenta bold
	meta = yellow bold
	new = green bold
	old = red bold
	whitespace = red reverse

[color "diff-highlight"]
	newHighlight = cyan bold 22
	newNormal = green bold
	oldHighlight = yellow bold 52
	oldNormal = red bold


### LFS ###

[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f


### Difftools ###

[diff]
	algorithm = histogram
	colorMoved = default
	navigate = true # Use `n` and `N` to move between diff sections.
	renames = copies # Detect copies as well as renames.
	tool = nvimdiff

[difftool]
	prompt = true
	trustExitCode = true

[merge]
	conflictstyle = diff3
	log = true # Include summaries of merged commits in new merge commit messages
	tool = nvimdiff

[mergetool]
	keepBackup = false
	prompt = false
	trustExitCode = true

# Neovim

[difftool "nvimdiff"]
	cmd = "nvim -d $MERGED $BASE $LOCAL $REMOTE -c 'wincmd J | wincmd ='"

[mergetool "nvimdiff"]
	cmd = "nvim -d $MERGED $BASE $LOCAL $REMOTE -c 'wincmd J | wincmd ='"

# Visual Studio Code

[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE

[mergetool "vscode"]
	cmd = code --wait $MERGED

# Visual Studio IDE

[difftool "visualstudio"]
	cmd = \"C:\\Program Files (x86)\\Microsoft Visual Studio\\Preview\\Community\\Common7\\IDE\\CommonExtensions\\Microsoft\\TeamFoundation\\Team Explorer\\vsdiffmerge.exe\" \"$LOCAL\" \"$REMOTE\" //t

[mergetool "visualstudio"]
	cmd = \"C:\\Program Files (x86)\\Microsoft Visual Studio\\Preview\\Community\\Common7\\IDE\\CommonExtensions\\Microsoft\\TeamFoundation\\Team Explorer\\vsdiffmerge.exe\" \"$REMOTE\" \"$LOCAL\" \"$BASE\" \"$MERGED\" //m


### URL ###

[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "git://github.com/"
	pushInsteadOf = "github:"

[url "git://github.com/"]
	insteadOf = "github:"

[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
	insteadOf = "gist:"


### Includes ###

# Unix

[include]
	path = ~/.config/git/aliases
	path = ~/.config/git/config.local

# Windows

[include]
	path = ~/AppData/Local/git/aliases
	path = ~/AppData/Local/git/config.local
	path = ~/AppData/Local/git/config.windows
