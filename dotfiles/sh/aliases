alias hosts='sudo vim /etc/hosts'

# copy working directory | Requires xclip
# alias cwd='pwd | tr -d "\r\n" | xclip -selection clipboard | echo "=> Working Directory copied to pasteboard."'

# untar archive
alias untar='tar xvf'

